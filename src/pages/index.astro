---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

<style>
        :root {
            --bg: #f2f4f7;
            --card-bg: #ffffff;
            --text: #1c1c1c;
            --accent: #4a6cf7;
        }

        body {
            margin: 0;
            padding: 0;
            background: var(--bg);
            color: var(--text);
            font-family: system-ui, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background: var(--card-bg);
            padding: 36px;
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
            text-align: center;
            width: min(90%, 360px);
        }

        .title {
            font-size: 30px;
            font-weight: 600;
            margin-bottom: 18px;
        }

        .subtitle {
            font-size: 16px;
            color: #666;
            margin-bottom: 20px;
        }

        .days-value {
            font-size: 56px;
            font-weight: 700;
            color: var(--accent);
            margin-top: 10px;
        }

        .compare-text {
            margin-top: 24px;
            font-size: 16px;
            font-weight: 500;
            color: #333;
        }

        .error {
            color: #c62828;
            font-weight: 600;
            margin-top: 12px;
        }
    </style>
	</head>
	<body>

<div class="container">
    <div class="title">Baby-Alter</div>
    <div id="birthday" class="subtitle"></div>
    <div>Alter:</div>
    <div id="days" class="days-value">–</div>
    <div id="compare" class="compare-text"></div>
    <div id="error" class="error"></div>
</div>

<script>
    const url = new URLSearchParams(window.location.search);

    const paramBirthday = url.get("birthday"); // YYYY-MM-DD
    const paramTime = url.get("time");         // HH:MM optional
    const paramName = url.get("name");         // optional

    const birthdayEl = document.getElementById("birthday");
    const daysEl = document.getElementById("days");
    const compareEl = document.getElementById("compare");
    const errorEl = document.getElementById("error");

    function formatName(name) {
        const clean = name.trim();
        if (clean.length === 0) return "";
        return clean.charAt(0).toUpperCase() + clean.slice(1).toLowerCase();
    }

    if (!paramBirthday) {
        birthdayEl.textContent = "Kein Datum übergeben.";
        daysEl.textContent = "–";
    } else {
        let hour = 0, minute = 0;

        if (paramTime) {
            const timeMatch = paramTime.match(/^(\d{1,2}):(\d{1,2})$/);
            if (timeMatch) {
                hour = parseInt(timeMatch[1], 10);
                minute = parseInt(timeMatch[2], 10);
            }
        }

        const [year, month, day] = paramBirthday.split("-").map(Number);
        const birthday = new Date(year, month - 1, day, hour, minute);

        if (isNaN(birthday.getTime())) {
            birthdayEl.textContent = "Ungültiges Datum oder Zeit.";
            errorEl.textContent = "Format: YYYY-MM-DD und HH:MM optional";
        } else {
            const now = new Date();
            let diffMs = now - birthday;

            const totalMinutes = Math.floor(diffMs / (1000 * 60));
            const days = Math.floor(totalMinutes / (60 * 24));
            const hours = Math.floor((totalMinutes - days * 24 * 60) / 60);
            const minutes = totalMinutes - days * 24 * 60 - hours * 60;

            birthdayEl.textContent = "Geburtstag: " + paramBirthday + (paramTime ? " " + paramTime : "");
            daysEl.textContent = ""; // clear previous
			if (paramName && paramName.trim() !== "") {
				daysEl.textContent = `${days} Tage`;
                const safeName = formatName(paramName);
                compareEl.textContent = 
                    `und damit ${days} Tage, ${hours} Stunden und ${minutes} Minuten mehr Elternerfahrung als ${safeName}`;
            } else {
				const dayLine = document.createElement("div");
				dayLine.textContent = `${days} Tage`;
				const hourLine = document.createElement("div");
				hourLine.textContent = `${hours} Stunden`;
				const minLine = document.createElement("div");
				minLine.textContent = `${minutes} Minuten`;
				
				daysEl.appendChild(dayLine);
				daysEl.appendChild(hourLine);
				daysEl.appendChild(minLine);
			}

            
        }
    }
</script>
	</body>
</html>
